        transform: translateY(50px);
        transition: opacity 0.8s ease-out, transform 0.8s ease-out;
    }

    /* Slide in from left */
    .slide-in-left {
        transform: translateX(-100px);
    }

    /* Slide in from right */
    .slide-in-right {
        transform: translateX(100px);
    }

    /* Slide in from bottom */
    .slide-in-bottom {
        transform: translateY(100px);
    }

    /* Final visible state */
    .animate-visible {
        opacity: 1;
        transform: translate(0, 0) !important;
    }

