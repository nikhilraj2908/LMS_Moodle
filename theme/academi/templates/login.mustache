{{!
    @template theme_academi/login

    Login page template

    Example context (json):
    {
        "output": {
            "doctype": "<!DOCTYPE html>",
            "page_title": "Login page",
            "favicon": "favicon.ico",
            "main_content": "<h1>Headers keep HTML validators happy</h1>"
        }
    }
}}
<style>
body, html {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
}

#page-wrapper,
#page,
.login-wrapper,
.login-container {
  margin: 0 !important;
  padding: 0 !important;
  width: 100% !important;
  max-width: 100% !important;
  height: 100% !important;
}

.login-wrapper {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.col-12{

    padding-right: 0px !important; 
    padding-left: 0px !important; 

}


</style>

{{> theme_boost/head }}
{{^isloginpage}}  {{! Hide header only on login page   /header likh denge navbar ki jagha  }}
    {{> theme_academi/navbar }}

{{/isloginpage}}
<body {{{ bodyattributes }}}>
    {{> core/local/toast/wrapper}}
    <div id="page-wrapper" >
        {{{ output.standard_top_of_body_html }}}
      <div id="page" class="w-100 p-0 m-0">
            <div id="page-content" class="row">
                <div id="region-main-box" class="col-12">
                    <section id="region-main" class="col-12 h-100" aria-label="{{#str}}content{{/str}}">
                    <div class="login-wrapper">
                        <div class="login-container">
                        {{{ output.main_content }}}
                        </div>
                    </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
    {{> theme_academi/footer }}
</body>
</html>
{{#js}}
M.util.js_pending('theme_boost/loader');
require(['theme_boost/loader'], function() {
  M.util.js_complete('theme_boost/loader');
});
{{/js}}

