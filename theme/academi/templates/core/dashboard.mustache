        .flame-icon {
            position: absolute;
            top: -40px;
            /* overlaps the ring */
            left: 50%;
            transform: translateX(-50%);
            font-size: 60px;
            /* large size */
            color: #FF5722;
            filter: drop-shadow(0 0 5px rgba(255, 87, 34, 0.7));
