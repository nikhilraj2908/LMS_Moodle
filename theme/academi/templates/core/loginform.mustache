{{> theme_boost/head }}

<style>
    .container-main {
        display: grid;
        grid-template-columns: 6fr 6fr;
        min-height: 100vh;
    }
   .left-side {
    position: relative;
    background: url('{{config.wwwroot}}/theme/academi/pix/loginbg.png') no-repeat center center;
    background-size: cover;
    display: flex;
    justify-content: center;
    align-items: center;
}


    .left-bg-box {
        max-width: 400px;
        padding: 2rem;
    }

    .logo-div {
        text-align: center;
        margin-bottom: 1rem;
    }

    .banner-text {
        font-weight: bold;
        color: #204070;
    }

    .right-side {
        display: flex;
        justify-content: center;
        align-items: center;
        background: #fff;
    }

    .login-form {
        width: 80%;
        max-width: 400px;
    }

    .login-text {
        font-size: 2.5rem;
        font-weight: bold;
        color: #204070;
        margin-bottom: 2rem;
        text-align: center;
    }

    .input-group {
        margin-bottom: 1.5rem;
        box-shadow: 1px 2px 5px 1px gray;
        border-radius: 8px;
        overflow: hidden;
    }

    .input-group input {
        border: none;
        padding: 12px 15px;
        font-size: 16px;
        width: 100%;
        outline: none;
    }

    .input-group i {
        background: #eee;
        padding: 0 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #204070;
    }

    .forgot-pass {
        text-align: right;
        font-size: 14px;
        font-weight: bold;
        margin-bottom: 2rem;
    }

    .signup-btn {
        width: 100%;
        font-size: 18px;
        padding: 10px;
        background-color: #204070;
        color: #fff;
        border: none;
        border-radius: 6px;
    }

    .social-line-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 20px;
        margin-top: 3rem;
    }

    .social-line-wrapper .line {
        height: 2px;
        background-color: #204070;
        flex: 1;
    }

    .social-line-wrapper .icons {
        font-size: 24px;
        color: #204070;
        display: flex;
        gap: 20px;
    }

    .icons a {
        color: inherit;
        text-decoration: none;
    }

    @media (max-width: 768px) {
        .container-main {
            display: block;
        }

        .left-side {
            display: none;
        }

        .right-side {
            padding: 2rem;
        }

        .login-form {
            width: 100%;
        }
    }

    .input-wrapper {
    position: relative;
    margin-bottom: 1.5rem;
    box-shadow: 1px 2px 5px 1px gray;
    border-radius: 8px;
    overflow: hidden;
}

.input-wrapper input {
    width: 100%;
    padding: 12px 12px 12px 40px; /* left padding to make space for icon */
    border: none;
    font-size: 16px;
    outline: none;
}

.input-icon {
    position: absolute;
    top: 50%;
    left: 12px;
    transform: translateY(-50%);
    color: #204070;
    font-size: 16px;
}
   
</style>


<body>
    <div class="container-main">
        <!-- Left Side Visual -->
        <div class="left-side">
          
            <div class="left-bg-box">
                <div class="logo-div">
                    <img src="{{config.wwwroot}}/theme/academi/pix/logomain.png" width="100" alt="Logo" />
                </div>
                <h2>Step In Skill Up Succeed<br />
                    with <span class="banner-text">AlogicData LMS</span>
                </h2>
                <p style="color:#204070;">Your personalized learning space â€“ available anytime, anywhere.</p>
                <h4>Start Learning <span class="banner-text">Today</span></h4>
            </div>
        </div>

        <!-- Right Side Form -->
        <div class="right-side">
            <div class="login-form">
                <div class="login-text">Log in</div>

                {{#error}}
                <div class="alert alert-danger">{{error}}</div>
                {{/error}}

               <form action="{{loginurl}}" method="post">
  <input type="hidden" name="logintoken" value="{{logintoken}}" />

  <div class="input-wrapper">
    <span class="input-icon"><i class="fa fa-user"></i></span>
    <input type="text" name="username" placeholder="Enter your username" required />
  </div>

  <div class="input-wrapper">
    <span class="input-icon"><i class="fa fa-lock"></i></span>
    <input type="password" name="password" placeholder="Enter your password" required />
  </div>

  <div class="forgot-pass">
    <a href="{{forgotpasswordurl}}">forgot password</a>
  </div>

  <button type="submit" class="signup-btn">Sign up</button>
</form>


                <!-- Social Icons -->
                <div class="social-line-wrapper">
                    <div class="line"></div>
                    <div class="icons">
                        <a href="#"><i class="fa fa-instagram"></i></a>
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                    </div>
                    <div class="line"></div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const loginForm = document.querySelector("form");
            loginForm.addEventListener("submit", function () {
                document.querySelector(".signup-btn").disabled = true;
            });
        });
    </script>
</body>
