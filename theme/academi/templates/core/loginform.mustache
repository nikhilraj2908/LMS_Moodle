<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script> 
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<style>
   .container-main {
  display: grid;
  grid-template-columns: 1fr 1fr;
  min-height: 100vh;
  width: 100vw;
  overflow-x: hidden;
}

   .left-side {
    position: relative;
    background: url('{{config.wwwroot}}/theme/academi/pix/loginbg.png') no-repeat center center;
    background-size: cover;
    display: flex;
    justify-content: center;
    align-items: center;
}

   .row {
        display: flex;
        flex-wrap: wrap;
         margin-right: 0px !important; 
        margin-left: -15px;
    }
    .left-bg-box {
        max-width: 50%;
        padding: 2rem;
    }
 @media (max-width: 1200px) {
    .left-bg-box {
        max-width: 100%;
        
    }
 }

    .logo-div {
        text-align: center;
        margin-bottom: 1rem;
    }

    .banner-text {
        font-weight: bold;
        color: #204070;
    }

    .right-side {
        display: flex;
        justify-content: center;
        align-items: center;
        background: #fff;
    }

    .login-form {
        width: 80%;
        max-width: 400px;
    }

    .login-text {
        font-size: 2.5rem;
        font-weight: bold;
        color: #204070;
        margin-bottom: 2rem;
        text-align: center;
    }

    .input-group {
        margin-bottom: 1.5rem;
        box-shadow: 1px 2px 5px 1px gray;
        border-radius: 8px;
        overflow: hidden;
    }

    .input-group input {
        border: none;
        padding: 12px 15px;
        font-size: 16px;
        width: 100%;
        outline: none;
    }

    .input-group i {
        background: #eee;
        padding: 0 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #204070;
    }

    .forgot-pass {
        text-align: right;
        font-size: 14px;
        font-weight: bold;
        margin-bottom: 2rem;
    }

    .signup-btn {
        width: 100%;
        font-size: 18px;
        padding: 10px;
        background-color: #204070;
        color: #fff;
        border: none;
        border-radius: 6px;
    }

    .social-line-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 20px;
        margin-top: 3rem;
    }

    .social-line-wrapper .line {
        height: 2px;
        background-color: #204070;
        flex: 1;
    }

    .social-line-wrapper .icons {
        font-size: 24px;
        color: #204070;
        display: flex;
        gap: 20px;
    }

    .icons a {
        color: inherit;
        text-decoration: none;
    }

    @media (max-width: 768px) {
        .container-main {
            display: block;
            align-content:center;
        }

        .left-side {
            display: none;
        }

        .right-side {
            padding: 2rem;
        }

        .login-form {
            width: 100%;
        }
    }

    .input-wrapper {
    position: relative;
    margin-bottom: 1.5rem;
    box-shadow: 1px 2px 5px 1px gray;
    border-radius: 8px;
    overflow: hidden;
}

.input-wrapper input {
    width: 100%;
    padding: 12px 12px 12px 40px; /* left padding to make space for icon */
    border: none;
    font-size: 16px;
    outline: none;
}

.input-icon {
    position: absolute;
    top: 50%;
    left: 12px;
    transform: translateY(-50%);
    color: #204070;
    font-size: 16px;
}
   @media (max-width: 574px) {
    form input[type="text"] {
        max-width: 100%;
    }
        form input[type="password"] {
        max-width: 100%;
    }
}
</style>


<body>
    <div class="container-main">
        <!-- Left Side Visual -->
        <div class="left-side">
          
            <div class="left-bg-box">
                <div class="logo-div">
                    <img src="{{config.wwwroot}}/theme/academi/pix/logomain.png" width="100" alt="Logo" />
                </div>
                <h2>Step In Skill Up Succeed<br />
                    with <span class="banner-text">AlogicData LMS</span>
                </h2>
                <p style="color:#204070;">Your personalized learning space â€“ available anytime, anywhere.</p>
                <h4>Start Learning <span class="banner-text">Today</span></h4>
            </div>
        </div>

        <!-- Right Side Form -->
        <div class="right-side">
            <div class="login-form">
                <div class="login-text">Log in</div>

                {{#error}}
                <div class="alert alert-danger">{{error}}</div>
                {{/error}}

               <form action="{{loginurl}}" method="post">
  <input type="hidden" name="logintoken" value="{{logintoken}}" />

  <div class="input-wrapper">
    <span class="input-icon"><i class="fa fa-user"></i></span>
    <input type="text" name="username" placeholder="Enter your username" required />
  </div>

  <div class="input-wrapper">
    <span class="input-icon"><i class="fa fa-lock"></i></span>
    <input type="password" name="password" placeholder="Enter your password" required />
  </div>

  <div class="forgot-pass">
    <a href="{{forgotpasswordurl}}">forgot password</a>
  </div>

  <button type="submit" class="signup-btn">Sign up</button>

</form>


                <!-- Social Icons -->
                <div class="social-line-wrapper">
                    <div class="line"></div>
                    <div class="icons">
                        <a href="#"><i class="fa fa-instagram"></i></a>
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                    </div>
                    <div class="line"></div>
                </div>
               <button onclick='loginguestclick()' class="btn btn-outline-primary w-100 mt-3" data-bs-toggle="modal" data-bs-target="#guestLoginModal">
                    {{#str}} loginguest, theme_academi {{/str}}
                </button>
            </div>
        </div>
    </div>

    <!--  modal for guest registration -->
 <div class="modal fade" id="guestLoginModal">
    <div class="modal-dialog">
        <div class="modal-content">
           <div class="modal-header">
                <h5 class="modal-title">{{#str}} guestlogin, theme_academi {{/str}}</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close"></button>
                <span>&times;</span>
            </div>
            <div class="modal-body">
                <div id="guest-email-section">
                    <div class="form-group">
                        <label for="guestemail">{{#str}} enteremail, local_guestlogin {{/str}}</label>
                        <input type="email" class="form-control" id="guestemail" required>
                    </div>
                    <button type="button" id="getGuestOtp" class="btn btn-primary w-100">
                        {{#str}} getotp, local_guestlogin {{/str}}
                    </button>
                    <div id="guestEmailMessage" class="mt-2 text-danger"></div>
                </div>
                <div id="guest-otp-section" style="display:none;">
                    <div class="form-group">
                        <label for="guestotp">{{#str}} enterotp, local_guestlogin {{/str}}</label>
                        <input type="text" class="form-control" id="guestotp" maxlength="6" required>
                    </div>
                    <button type="button" id="verifyGuestOtp" class="btn btn-success w-100">
                        {{#str}} verifyotp, local_guestlogin {{/str}}
                    </button>
                    <div id="guestOtpMessage" class="mt-2 text-danger"></div>
                </div>
            </div>
        </div>
    </div>
</div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const loginForm = document.querySelector("form");
            loginForm.addEventListener("submit", function () {
                document.querySelector(".signup-btn").disabled = true;
            });
        });
        function loginguestclick(){
            console.log("login as guest clicked")
        }

    document.addEventListener("DOMContentLoaded", function() {
    const guestModal = $('#guestLoginModal');
    
    // Open modal when "Login as Guest" is clicked
    $('[data-bs-target="#guestLoginModal"]').click(function() {
        guestModal.modal('show');
    });
    
    // Get OTP button handler
    $('#getGuestOtp').click(function() {
           console.log("Get OTP clicked")
        const email = $('#guestemail').val().trim();
        if (!validateEmail(email)) {
            $('#guestEmailMessage').text('Please enter a valid email address');
            return;
        }
        const url="{{config.wwwroot}}/local/guestlogin/send_otp.php";
        console.log("OTP URL is", url);
      fetch(url, {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ email })
})
.then(res => res.json())
.then(data => {
    console.log("Fetch response:", data);
    if (data.success) {
        $('#guest-email-section').hide();
        $('#guest-otp-section').show();
        $('#guestEmailMessage').text('');
        
    } else {
        $('#guestEmailMessage').text(data.message);
    }
})
.catch(error => {
    console.error("Fetch failed:", error);
});
});
    
    // Verify OTP button handler
    $('#verifyGuestOtp').click(function() {
        const email = $('#guestemail').val().trim();
        const otp = $('#guestotp').val().trim();
        
        fetch("{{config.wwwroot}}/local/guestlogin/verify_otp.php", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ email, otp })
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                window.location.href = data.redirect;
            } else {
                $('#guestOtpMessage').text(data.message);
            }
        });
    });
    
    // Email validation helper
    function validateEmail(email) {
        const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return re.test(email);
    }
});

    </script>
</body>
