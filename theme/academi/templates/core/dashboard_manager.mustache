<div class="regional-manager-dashboard container-fluid py-4">
    <!-- Dashboard Header -->
    <div class="dashboard-header bg-primary text-white p-4 rounded mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-1">{{regionname}} Region Dashboard</h1>
                <p class="mb-0">Regional Manager: {{username}}</p>
            </div>
            <div class="col-md-4 text-md-end">
                <p class="mb-0"><i class="fas fa-calendar me-1"></i> {{date}}</p>
                <p class="mb-0"><i class="fas fa-users me-1"></i> {{activeUserCount}} Active Users</p>
            </div>
        </div>
    </div>

    <!-- Online Users -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0"><i class="fas fa-user-clock me-2"></i> Currently Online ({{onlineUsers.length}})</h3>
        </div>
        <div class="card-body">
            <div class="d-flex flex-wrap">
                {{#onlineUsers}}
                <div class="online-user me-4 mb-3 text-center">
                    <div class="mb-2">{{{avatar}}}</div>
                    <a href="{{profileurl}}" class="text-dark">{{name}}</a>
                </div>
                {{/onlineUsers}}
                {{^onlineUsers}}
                <p class="mb-0">No users currently online</p>
                {{/onlineUsers}}
            </div>
        </div>
    </div>

    <!-- Student Progress Report -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0"><i class="fas fa-user-graduate me-2"></i> Student Progress Report</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Student</th>
                            <th>Course</th>
                            <th>Progress</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#studentsData}}
                        <tr>
                            <td>{{student}}</td>
                            <td>{{course}}</td>
                            <td>
                                <div class="progress" style="height: 25px;">
                                    <div class="progress-bar {{progressClass}}" 
                                         role="progressbar" 
                                         style="width: {{progress}}%"
                                         aria-valuenow="{{progress}}" 
                                         aria-valuemin="0" 
                                         aria-valuemax="100">
                                        {{progress}}%
                                    </div>
                                </div>
                            </td>
                        </tr>
                        {{/studentsData}}
                        {{^studentsData}}
                        <tr>
                            <td colspan="3" class="text-center py-4">No student data available</td>
                        </tr>
                        {{/studentsData}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Course Completion Summary -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0"><i class="fas fa-book me-2"></i> Course Completion Summary</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Course</th>
                            <th>Enrolled</th>
                            <th>Completed</th>
                            <th>Completion Rate</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#coursesData}}
                        <tr>
                            <td>{{course}}</td>
                            <td>{{enrolled}}</td>
                            <td>{{completed}}</td>
                            <td>
                                <span class="badge {{statusClass}} p-2">
                                    {{completion_rate}}%
                                </span>
                            </td>
                        </tr>
                        {{/coursesData}}
                        {{^coursesData}}
                        <tr>
                            <td colspan="4" class="text-center py-4">No course data available</td>
                        </tr>
                        {{/coursesData}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0"><i class="fas fa-history me-2"></i> Recent Activity</h3>
        </div>
        <div class="card-body">
            <ul class="list-group">
                {{#recentActivity}}
                <li class="list-group-item">
                    <div class="d-flex justify-content-between">
                        <div>
                            <strong>{{user}}</strong> performed <span class="text-primary">{{action}}</span>
                            <div class="text-muted small">in {{course}}</div>
                        </div>
                        <div class="text-end">
                            <span class="text-muted small">{{time}}</span>
                        </div>
                    </div>
                </li>
                {{/recentActivity}}
                {{^recentActivity}}
                <li class="list-group-item text-center py-4">No recent activity</li>
                {{/recentActivity}}
            </ul>
        </div>
    </div>
</div>