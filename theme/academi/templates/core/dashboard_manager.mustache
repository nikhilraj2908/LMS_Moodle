
<style>
    /* General Styling for Dashboard */

.dashboard-header {
    background: linear-gradient(135deg , var(--primary), #386f81);
    color: white !important;
    padding: 20px 30px;
    border-radius: var(--border-radius);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);

    justify-content: space-between;
    align-items: center;
    margin-bottom: 25px;
}



.dashboard-header h1 {
    font-size: 2rem;
    font-weight: 600;
}

.dashboard-header p {
    font-size: 1rem;
}

.dashboard-header .col-md-4 p {
    font-size: 0.9rem;
    margin-top: 0.5rem;
}

/* Online Users Section */
.card-header {
        background: linear-gradient(135deg , var(--primary), #386f81);
    color: white;
    border-radius: 0.5rem 0.5rem 0 0;
    
}

.card-body {
    background-color: #ffffff;
    border-radius: 0 0 0.5rem 0.5rem;
    height:100%;
    max-height:50vh;
    overflow:scroll;
}
 .date-display {
    background: rgba(255, 255, 255, 0.15);
    padding: 6px 12px;
    border-radius: 999px;
    font-weight: 500;
    font-size: 0.9rem;
    
    display: inline-flex;
    align-items: center;
    gap: 6px;
    line-height: 1.5;
}

.card-title {
    font-size: 1.25rem;
    font-weight: 600;
}

.online-user {
    max-width: 100px;
    text-align: center;
}

.online-user a {
    font-size: 0.9rem;
    font-weight: 500;
    color: #343a40;
}

.online-user a:hover {
    color: #007bff;
    text-decoration: underline;
}

/* Progress Bar */
.progress {
    height: 20px;
    margin-bottom: 0.75rem;
    border-radius: 0.5rem;
    background-color: #e9ecef;
}

.progress-bar {
    border-radius: 0.5rem;
}

/* Student Progress Table */
.table {
    margin-top: 1.5rem;
}

.table-hover tbody tr:hover {
    background-color: #f1f1f1;
}

.table th, .table td {
    vertical-align: middle;
    padding: 1rem;
}

.table th {
    font-size: 1rem;
    font-weight: 600;
}

.table td {
    font-size: 0.9rem;
}

.progress-bar.bg-success {
    background-color: #28a745;
}

.progress-bar.bg-warning {
    background-color: #ffc107;
}

.progress-bar.bg-danger {
    background-color: #dc3545;
}

/* Course Completion Summary Table */
.badge {
    font-size: 0.875rem;
    font-weight: 500;
    padding: 0.375rem 0.75rem;
    border-radius: 0.375rem;
}

.badge.bg-success {
    background-color: #28a745;
    color: white;
}

.badge.bg-warning {
    background-color: #ffc107;
    color: white;
}

.badge.bg-danger {
    background-color: #dc3545;
    color: white;
}

/* Recent Activity Section */
.list-group-item {
    font-size: 0.9rem;
    padding: 1rem;
    border: none;
}

.list-group-item .d-flex {
    align-items: center;
}

.list-group-item .d-flex div {
    max-width: 85%;
}

.list-group-item .text-muted {
    font-size: 0.8rem;
}
 .rm-avatar{
        border-radius: inherit;
    }

/* Responsive Design */
@media (max-width: 767px) {
    .dashboard-header h1 {
        font-size: 1.75rem;
    }

    .dashboard-header p {
        font-size: 0.9rem;
    }

    .online-user {
        max-width: 80px;
    }

    .table th, .table td {
        padding: 0.75rem;
    }
   
}
.online-user img,
.regional-manager-avatar img {
    width: 65px;
    height: 65px;
    object-fit: cover;
    border-radius: 50%;
    display: inline-block;
}

.online-dot {
    display: inline-block;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: #28a745; /* Green color */
    
    vertical-align: middle;
}

.block-regional2{
    display:grid;
    grid-template-columns:9fr 3fr;
    gap:25px;
}

.block-regional3{
    display:grid;
    grid-template-columns:8fr 4fr;
    gap:25px;
}
@media(max-width:767px){
    .block-regional2{
    display:block;
}
.block-regional3{
    display:block;
}
}
</style>

<div class="regional-manager-dashboard container-fluid py-4">
    <!-- Dashboard Header -->
  <div class="dashboard-header bg-primary text-white p-4 rounded mb-4">
  <div class="row align-items-center">
    
    <!-- Avatar and Regional Manager Info -->
    <div class="col-md-8 d-flex align-items-center">
      <div class="regional-manager-avatar me-3 border rounded-circle">
      {{{ regionalManager.avatar }}}
      </div>
      <div>
        <h1 class="mb-1 text-light">{{regionname}} Dashboard</h1>
        <p class="mb-0">Regional Manager: {{regionalManager.name}}</p>
        <a class="text-white-50 small" href="{{regionalManager.profile}}">View Profile</a>
      </div>
    </div>

    <!-- Date and active users -->
  <!-- Date and active users -->
<div class="col-md-4 text-md-end mt-3 mt-md-0 d-flex flex-column align-items-end gap-2">
  <div class="date-display">
    <i class="fas fa-calendar"></i> {{date}}
  </div>
  <p class="mb-0"><i class="fas fa-users me-1"></i> {{activeUserCount}} Active Users</p>
</div>


  </div>
</div>

<div class="mb-3">
  <a href="{{{config.wwwroot}}}/course/management.php?categoryid=5" class="btn btn-outline-secondary me-2">Manage courses</a>
  <a href="{{{config.wwwroot}}}/course/edit.php?category=5" class="btn btn-primary">Create course</a>
</div>

<div class="block-regional2">
    <!-- Student Progress Report -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0 text-light"><i class="fas fa-user-graduate me-2"></i> Student Progress Report</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Student</th>
                            <th>Course</th>
                            <th>Progress</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#studentsData}}
                        <tr>
                            <td>{{student}}</td>
                            <td>{{course}}</td>
                            <td>
                                <div class="progress" style="height: 25px;">
                                    <div class="progress-bar {{progressClass}}" 
                                         role="progressbar" 
                                         style="width: {{progress}}%"
                                         aria-valuenow="{{progress}}" 
                                         aria-valuemin="0" 
                                         aria-valuemax="100">
                                        {{progress}}%
                                    </div>
                                </div>
                            </td>
                        </tr>
                        {{/studentsData}}
                        {{^studentsData}}
                        <tr>
                            <td colspan="3" class="text-center py-4">No student data available</td>
                        </tr>
                        {{/studentsData}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
             <!-- Online Users -->
    <div class="card mb-4">
        <div class="card-header  text-white">
            <h3 class="card-title text-light mb-0"><i class="fas fa-user-clock me-2"></i> Currently Online ({{onlineUsersCount}})</h3>
        </div>
        <div class="card-body">
            <div class="d-flex flex-wrap">
                {{#onlineUsers}}
                <div class="online-user me-4 mb-3 text-center">
                    <div class="mb-2">{{{avatar}}}</div>
                    <a href="{{profileurl}}" class="text-dark">
                        {{name}} 
                        <!-- Green dot indicating online status -->
                        <span class="online-dot"></span>
                    </a>
                </div>
                {{/onlineUsers}}
                {{^onlineUsers}}
                <p class="mb-0">No users currently online</p>
                {{/onlineUsers}}
            </div>
        </div>
    </div>

</div>


<div class="block-regional3">
        
            <!-- Course Completion Summary -->
        <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0 text-light"><i class="fas fa-book me-2"></i> Course Completion Summary</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Course</th>
                            <th>Enrolled</th>
                            <th>Completed</th>
                            <th>Completion Rate</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#coursesData}}
                        <tr>
                            <td>{{course}}</td>
                            <td>{{enrolled}}</td>
                            <td>{{completed}}</td>
                            <td>
                                <span class="badge {{statusClass}} p-2">
                                    {{completion_rate}}%
                                </span>
                            </td>
                        </tr>
                        {{/coursesData}}
                        {{^coursesData}}
                        <tr>
                            <td colspan="4" class="text-center py-4">No course data available</td>
                        </tr>
                        {{/coursesData}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>


            <!-- Recent Activity -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0 text-light"><i class="fas fa-history me-2"></i> Recent Activity</h3>
        </div>
        <div class="card-body">
            <ul class="list-group">
                {{#recentActivity}}
                <li class="list-group-item">
                    <div class="d-flex justify-content-between">
                        <div>
                            <strong>{{user}}</strong> performed <span class="text-primary">{{action}}</span>
                            <div class="text-muted small">in {{course}}</div>
                        </div>
                        <div class="text-end">
                            <span class="text-muted small">{{time}}</span>
                        </div>
                    </div>
                </li>
                {{/recentActivity}}
                {{^recentActivity}}
                <li class="list-group-item text-center py-4">No recent activity</li>
                {{/recentActivity}}
            </ul>
        </div>
    </div>


</div>


    <div class="card mb-4">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h3 class="card-title mb-0 text-light">
            <i class="fas fa-file-download me-2"></i> Progress Report (Downloadable)
        </h3>
        <a href="{{exportUrl}}" class="btn btn-light btn-sm">
            <i class="fas fa-download me-1"></i> Export CSV
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Student</th>
                        <th>Course</th>
                        <th>Region</th>
                        <th class="text-center">Score</th>
                      
                        <th class="text-center">Progress</th>
                        <th class="text-center">Status</th>
                    </tr>
                </thead>
                <tbody>
                    {{#reportData}}
                    <tr>
                        <td>{{username}}</td>
                        <td>{{coursename}}</td>
                        <td>{{region}}</td>
                        <td class="text-center">{{score}}</td>
                        
                        <td>
                            <div class="progress" style="height: 20px;">
                                <div class="progress-bar 
                                    {{#progress}} {{#ge}}70{{/ge}}bg-success{{/progress}}
                                    {{#progress}} {{#lt}}70{{/lt}}{{#ge}}40{{/ge}}bg-warning{{/progress}}
                                    {{#progress}} {{#lt}}40{{/lt}}bg-danger{{/progress}}"
                                    role="progressbar" 
                                    style="width: {{progress}}%"
                                    aria-valuenow="{{progress}}" 
                                    aria-valuemin="0" 
                                    aria-valuemax="100">
                                    {{progress}}%
                                </div>
                            </div>
                        </td>
                        <td class="text-center">
                            <span class="badge 
                                {{#status}} {{#eq}}Completed{{/eq}}bg-success{{/status}}
                                {{#status}} {{#eq}}In Progress{{/eq}}bg-warning{{/status}}
                                {{#status}} {{#eq}}Not Started{{/eq}}bg-secondary{{/status}} p-2">
                                {{status}}
                            </span>
                        </td>
                    </tr>
                    {{/reportData}}
                    {{^reportData}}
                    <tr>
                        <td colspan="7" class="text-center py-4">
                            <i class="fas fa-info-circle me-2"></i> No report data available
                        </td>
                    </tr>
                    {{/reportData}}
                </tbody>
            </table>
        </div>
    </div>
</div>

    
</div>