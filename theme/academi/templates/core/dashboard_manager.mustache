        background: #f9f9f9;
    }

    /* Add space between table rows */
    .completion-summary-card table tbody tr {
        height: 60px; /* Increased row height */
    }

    /* Ensure consistent white text in all headers */
    .card-header h3,
    .card-header .fas {
        color: white !important;
    }



</style>

<div class="regional-manager-dashboard container-fluid">
    <!-- Dashboard Header -->
    <div class="dashboard-header">
        <div class="row align-items-center">
            <!-- Avatar and Regional Manager Info -->
            <div class="col-lg-8 d-flex align-items-center">
                <div class="regional-manager-avatar me-4">
                    {{{ regionalManager.avatar }}}
                </div>
                <div>
                    <h1 class="mb-2 text-white">{{regionname}} Dashboard</h1>
                    <p class="mb-1">Welcome back, <strong>{{regionalManager.name}}</strong></p>
                    <a class="text-white-50 small d-flex align-items-center" href="{{regionalManager.profile}}">
                        <i class="fas fa-user-circle me-1"></i> View Profile
                    </a>
                </div>
            </div>

            <!-- Date and active users -->
            <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
                <div class="date-display mb-2">
                    <i class="fas fa-calendar-alt me-2"></i> {{date}}
                </div>
                <div class="d-inline-block bg-white-10 p-2 rounded">
                    <i class="fas fa-users me-2"></i> 
                    <span class="fw-bold">{{activeUserCount}}</span> Active Users
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="action-buttons mb-4">
        <a href="{{{config.wwwroot}}}/course/management.php?categoryid=5" class="btn btn-outline-secondary me-2">
            <i class="fas fa-cog me-1"></i> Manage Courses
        </a>
        <a href="{{{config.wwwroot}}}/course/edit.php?category=5" class="btn btn-primary">
            <i class="fas fa-plus-circle me-1"></i> Create New Course
        </a>
    </div>

    <!-- Main Dashboard Grid -->
    <div class="block-regional2">
        <!-- Student Progress Report -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-user-graduate me-2"></i> Student Progress Report</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Student</th>
                                <th>Course</th>
                                <th>Progress</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#studentsData}}
                            <tr>
                                <td class="fw-bold">{{student}}</td>
                                <td>{{course}}</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="progress flex-grow-1 me-3">
                                            <div class="progress-bar {{progressClass}}" 
                                                 role="progressbar" 
                                                 style="width: {{progress}}%"
                                                 aria-valuenow="{{progress}}" 
                                                 aria-valuemin="0" 
                                                 aria-valuemax="100">
                                            </div>
                                        </div>
                                        <small class="text-muted">{{progress}}%</small>
                                    </div>
                                </td>
                            </tr>
                            {{/studentsData}}
                            {{^studentsData}}
                            <tr>
                                <td colspan="3" class="text-center py-4 text-muted">
                                    <i class="fas fa-info-circle me-2"></i> No student data available
                                </td>
                            </tr>
                            {{/studentsData}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Online Users -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-user-clock me-2"></i> Currently Online ({{onlineUsersCount}})</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    {{#onlineUsers}}
                    <div class="col-6 col-md-4 mb-3">
                        <div class="online-user p-2 rounded">
                            <div class="online-user-avatar mb-2">
                                {{{avatar}}}
                            </div>
                            <a href="{{profileurl}}" class="text-dark fw-bold d-block">
                                {{name}} 
                                <span class="online-dot"></span>
                            </a>
                            <small class="text-muted">Active now</small>
                        </div>
                    </div>
                    {{/onlineUsers}}
                    {{^onlineUsers}}
                    <div class="col-12 text-center py-4 text-muted">
                        <i class="fas fa-user-slash fa-2x mb-3"></i>
                        <p class="mb-0">No users currently online</p>
                    </div>
                    {{/onlineUsers}}
                </div>
            </div>
        </div>
    </div>

