  {{!   Regional Manager Dashboard   }}
  {{!––––––––––––––––––––––––––––––––––––––––––––––––––}}
  <html lang="en">
   <head>
     <meta charset="UTF-8">
     <title>Regional Manager Dashboard</title>
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
     <style>
       /* …whatever CSS you need… */
     </style>
   </head>
   <body>
     <div class="bg-light">
       <div class="dashboard-header justify-content-between">
         <div class="d-flex align-items-center">
           {{{userpicture}}}
           <span class="ms-2">Hey! {{username}} (Regional Manager)</span>
         </div>
       </div>
       <div class="container">
         <div class="top-row d-flex" style="margin: 10px 30px; justify-content:center;">
           <!-- 1) Region Summary -->
           <div class="learning-card" style="width:25%;">
             <div class="decoration decoration-1"></div>
             <div class="decoration decoration-2"></div>
             <div class="card-header">
               <h1 class="card-title">{{regionname}}</h1>
               <p class="card-subtitle">Region Summary</p>
             </div>
             <div class="card-content text-start">
               <ul style="font-size:16px;color:#204070;">
                 <li>Active Users: <strong>{{activeUserCount}}</strong></li>
                 <li>Total Courses: <strong>{{totalCoursesInRegion}}</strong></li>
                 <li>Avg. Completion: <strong>{{avgCompletionRate}}%</strong></li>
                 <li>New Enrollments (7d): <strong>{{newEnrollments7d}}</strong></li>
               </ul>
             </div>
           </div>

           <!-- 2) Top Courses in Region -->
           <div class="card-equal learning-card" style="width:25%;">
             <div class="decoration decoration-1"></div>
             <div class="decoration decoration-2"></div>
             <div class="card-header">
               <h1 class="card-title">Top Courses</h1>
               <p class="card-subtitle">by Completion %</p>
             </div>
             <div class="card-content">
               {{#topCourses}}
                 <div class="course-meta">
                   <div class="course-category">{{coursename}}</div>
                   <div class="course-status">{{completionPercentage}}%</div>
                 </div>
                 <div class="progress-bar-container">
                   <div class="progress-bar-fill" style="width: {{completionPercentage}}%;"></div>
                 </div>
               {{/topCourses}}
               {{^topCourses}}
                 <div class="no-course">
                   <i class="fas fa-chart-line"></i>
                   <p>No course data available</p>
                 </div>
               {{/topCourses}}
             </div>
           </div>

           <!-- 3) Region Activity Chart -->
           <div class="card-equal learning-card" style="width:25%;">
             <div class="decoration decoration-1"></div>
             <div class="decoration decoration-2"></div>
             <div class="card-header">
               <h1 class="card-title">Region Activity</h1>
               <p class="card-subtitle">Hours This Week</p>
             </div>
             <div class="hours-activity-section">
               <canvas id="regionActivityChart"></canvas>
             </div>
           </div>

           <!-- 4) Regional Manager Quick Links -->
           <div class="learning-path-card" style="width:380px;">
             <div class="card-header">
               <h1 class="card-title">Quick Links</h1>
             </div>
             <ul style="list-style:none;padding-left:0;text-align:left;font-size:16px;">
               <li>
                 <a href="/course/edit.php?category={{regionid}}" class="course-link-button">
                   → Create New Course
                 </a>
               </li>
               <li>
                 <a href="/report/outline/index.php?categoryid={{regionid}}" class="course-link-button">
                   → Course Progress Report
                 </a>
               </li>
               <li>
                 <a href="/report/users/index.php?categoryid={{regionid}}&limit=500" class="course-link-button">
                   → View Region Users
                 </a>
               </li>
               <li>
                 <a href="/report/log/index.php?categoryid={{regionid}}" class="course-link-button">
                   → Region Site Logs
                 </a>
               </li>
             </ul>
           </div>
         </div>
       </div>
     </div>

     <script>
       document.addEventListener('DOMContentLoaded', function() {
         const ctx = document.getElementById('regionActivityChart');
         if (!ctx) { return; }
         const data = JSON.parse('{{{regionHoursActivity}}}');
         new Chart(ctx.getContext('2d'), {
           type: 'bar',
           data: {
             labels: ['Sun','Mon','Tue','Wed','Thu','Fri','Sat'],
             datasets: [{
               label: 'Hours Spent',
               data: data,
               backgroundColor: [
                 '#204070','#204070','#204070',
                 '#204070','#204070','#204070','#204070'
               ],
               borderWidth: 0,
               barThickness: 20
             }]
           },
           options: {
             responsive: true,
             plugins: { legend:{display:false}, tooltip:{enabled:true} },
             scales: {
               y: { beginAtZero:true, grid:{display:false} },
               x: { grid:{display:false} }
             }
           }
         });
       });
     </script>
   </body>
  </html>
